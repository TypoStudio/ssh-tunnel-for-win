<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon Condition="Exists('Assets\app-icon.ico')">Assets\app-icon.ico</ApplicationIcon>
    <Version>1.0.0</Version>
    <AssemblyTitle>SSH Tunnel Manager</AssemblyTitle>
    <Company>TypoStudio</Company>
    <Product>SSH Tunnel Manager</Product>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.*" />
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.*" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="8.0.*" />
    <PackageReference Include="System.Management" Version="8.0.*" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\app-icon.ico" Condition="Exists('Assets\app-icon.ico')" />
    <Resource Include="Assets\tray-icon.ico" Condition="Exists('Assets\tray-icon.ico')" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Strings.resx" />
    <EmbeddedResource Update="Resources\Strings.ko.resx">
      <DependentUpon>Strings.resx</DependentUpon>
    </EmbeddedResource>
  </ItemGroup>
</Project>
