<Window x:Class="SSHTunnel4Win.Views.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:SSHTunnel4Win.Resources"
        Title="{x:Static res:Strings.Help}"
        Width="500" Height="450" ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="16">
        <Button DockPanel.Dock="Bottom" Content="{x:Static res:Strings.Close}" Click="CloseClick"
                HorizontalAlignment="Right" Width="80" Margin="0,12,0,0"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{x:Static res:Strings.HelpTunnelManagement}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpTunnelManagementDesc}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static res:Strings.HelpTunnelTypes}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpLocalDesc}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpRemoteDesc}" TextWrapping="Wrap" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpDynamicDesc}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static res:Strings.HelpAuthentication}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpAuthDesc}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static res:Strings.HelpSSHConfig}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpSSHConfigDesc}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static res:Strings.HelpShareImport}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpShareImportDesc}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static res:Strings.HelpMenuBar}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpMenuBarDesc}" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <TextBlock Text="{x:Static res:Strings.HelpKeyboardShortcuts}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                <TextBlock Text="{x:Static res:Strings.HelpKeyboardShortcutsDesc}" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
