<Window x:Class="SSHTunnel4Win.Views.ProcessListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:SSHTunnel4Win.Resources"
        Title="{x:Static res:Strings.RunningSSHProcesses}"
        Width="600" Height="400" ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="{x:Static res:Strings.Refresh}" Click="RefreshClick" Margin="0,0,8,0"/>
            <Button Content="{x:Static res:Strings.KillAll}" Click="KillAllClick"/>
        </StackPanel>

        <Button DockPanel.Dock="Bottom" Content="{x:Static res:Strings.Close}" Click="CloseClick"
                HorizontalAlignment="Right" Width="80" Margin="0,8,0,0"/>

        <DataGrid x:Name="ProcessGrid" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" SelectionMode="Single" GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static res:Strings.PID}" Binding="{Binding Pid}" Width="70"/>
                <DataGridTextColumn Header="{x:Static res:Strings.Command}" Binding="{Binding CommandLine}" Width="*"/>
                <DataGridTemplateColumn Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{x:Static res:Strings.KillProcess}" Click="KillClick" Tag="{Binding Pid}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
