<UserControl x:Class="SSHTunnel4Win.Views.TunnelDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:res="clr-namespace:SSHTunnel4Win.Resources"
             xmlns:conv="clr-namespace:SSHTunnel4Win.Converters"
             xmlns:models="clr-namespace:SSHTunnel4Win.Models">
    <UserControl.Resources>
        <conv:ConnectionStateToColorConverter x:Key="StateToColor"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InvBoolToVis"/>
        <conv:TunnelTypeToVisibilityConverter x:Key="TypeToVis"/>
    </UserControl.Resources>

    <DockPanel>
        <!-- Toolbar -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Band="1" BandIndex="1">
                <Button Click="LoadFromSSHConfig" ToolTip="{x:Static res:Strings.LoadFromSSHConfig}">
                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
                <Button Click="ShowLog" ToolTip="{x:Static res:Strings.ConnectionLog}">
                    <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
                <Separator/>
                <Button Command="{Binding ToggleConnectCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8"
                                 Fill="{Binding State, Converter={StaticResource StateToColor}}" Margin="0,0,4,0"/>
                        <TextBlock x:Name="ConnectLabel"/>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Error message -->
        <TextBlock x:Name="ErrorText" DockPanel.Dock="Top" Text="{Binding ErrorMessage}" Foreground="Red"
                   TextWrapping="Wrap" Margin="16,4,16,0" FontSize="11"
                   Visibility="Collapsed"/>

        <!-- Form -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel Margin="16">
                <!-- Connection -->
                <GroupBox Header="{x:Static res:Strings.Connection}" Margin="0,0,0,12">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static res:Strings.Name}" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static res:Strings.Host}" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,6"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static res:Strings.Port}" VerticalAlignment="Center" Margin="0,0,0,6"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PortText, UpdateSourceTrigger=PropertyChanged}" Width="80" HorizontalAlignment="Left" Margin="0,0,0,6"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static res:Strings.Username}" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </GroupBox>

                <!-- Authentication -->
                <GroupBox Header="{x:Static res:Strings.Authentication}" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <RadioButton Content="{x:Static res:Strings.IdentityFile}" GroupName="Auth"
                                         IsChecked="{Binding AuthMethod, Converter={StaticResource AuthMethodToBool}, ConverterParameter=IdentityFile}"
                                         Margin="0,0,16,0"/>
                            <RadioButton Content="{x:Static res:Strings.Password}" GroupName="Auth"
                                         IsChecked="{Binding AuthMethod, Converter={StaticResource AuthMethodToBool}, ConverterParameter=Password}"/>
                        </StackPanel>
                        <!-- Identity File -->
                        <DockPanel x:Name="IdentityFilePanel">
                            <Button DockPanel.Dock="Right" Content="{x:Static res:Strings.BrowseBtn}"
                                    Command="{Binding BrowseIdentityFileCommand}" Margin="8,0,0,0"/>
                            <TextBox Text="{Binding IdentityFile, UpdateSourceTrigger=PropertyChanged}"/>
                        </DockPanel>
                        <!-- Password -->
                        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordChanged"/>
                    </StackPanel>
                </GroupBox>

                <!-- Port Forwarding -->
                <GroupBox Header="{x:Static res:Strings.PortForwarding}" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <!-- Header -->
                        <Grid Margin="0,0,0,4" x:Name="EntryHeader">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Static res:Strings.Type}" FontWeight="SemiBold" FontSize="11"/>
                            <TextBlock Grid.Column="1" Text="{x:Static res:Strings.LocalPort}" FontWeight="SemiBold" FontSize="11"/>
                            <TextBlock Grid.Column="2" Text="{x:Static res:Strings.RemoteHost}" FontWeight="SemiBold" FontSize="11"/>
                            <TextBlock Grid.Column="3" Text="{x:Static res:Strings.RemotePort}" FontWeight="SemiBold" FontSize="11"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding TunnelEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="55"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="55"/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0" SelectedValue="{Binding Type}" Margin="0,0,4,0"
                                                  SelectedValuePath="Tag">
                                            <ComboBoxItem Content="Local (-L)" Tag="{x:Static models:TunnelType.Local}"/>
                                            <ComboBoxItem Content="Remote (-R)" Tag="{x:Static models:TunnelType.Remote}"/>
                                            <ComboBoxItem Content="Dynamic (-D)" Tag="{x:Static models:TunnelType.Dynamic}"/>
                                        </ComboBox>
                                        <TextBox Grid.Column="1" Text="{Binding LocalPortText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"/>
                                        <TextBox Grid.Column="2" Text="{Binding RemoteHost, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"
                                                 Visibility="{Binding Type, Converter={StaticResource TypeToVis}}"/>
                                        <TextBox Grid.Column="3" Text="{Binding RemotePortText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0"
                                                 Visibility="{Binding Type, Converter={StaticResource TypeToVis}}"/>
                                        <Button Grid.Column="4" Content="X" Command="{Binding DeleteCommand}"
                                                Width="24" Height="24" FontSize="10"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="{x:Static res:Strings.AddRule}" Command="{Binding AddTunnelEntryCommand}"
                                HorizontalAlignment="Left" Margin="0,4,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Options -->
                <GroupBox Header="{x:Static res:Strings.Options}" Margin="0,0,0,12">
                    <StackPanel Margin="8">
                        <CheckBox Content="{x:Static res:Strings.AutoConnectOnLaunch}" IsChecked="{Binding AutoConnect}" Margin="0,0,0,4"/>
                        <CheckBox Content="{x:Static res:Strings.DisconnectOnQuit}" IsChecked="{Binding DisconnectOnQuit}" Margin="0,0,0,8"/>
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Left" Text="{x:Static res:Strings.AdditionalSSHArguments}"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding AdditionalArgs, UpdateSourceTrigger=PropertyChanged}"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Share -->
                <GroupBox Header="{x:Static res:Strings.Share}" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" Margin="8">
                        <Button Content="{x:Static res:Strings.CopyShareString}" Command="{Binding CopyShareStringCommand}" Margin="0,0,8,0"/>
                        <Button Content="{x:Static res:Strings.CopyCLICommand}" Command="{Binding CopyCLICommandCommand}" Margin="0,0,8,0"/>
                        <TextBlock Text="{x:Static res:Strings.Copied}" Foreground="Green" VerticalAlignment="Center"
                                   Visibility="{Binding ShowCopied, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
